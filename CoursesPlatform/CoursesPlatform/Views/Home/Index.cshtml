@model IEnumerable<CoursesPlatform.Models.CourseModel>
@{Layout = "~/Views/Shared/_Layout.cshtml";

}


<header class="py-5">
    <div class="container px-lg-5">
        <div class="p-4 p-lg-5 bg-light rounded-3 text-center">
            <div class="m-4 m-lg-5">
                <h1 class="display-5 fw-bold">
                    A broad selection of courses
                </h1>
                <p class="fs-4">
                    Choose from 183,000 online video courses with new additions published every month
                </p>
                <a class="btn btn-primary btn-lg" href="#!">Explore Our Courses</a>
            </div>
        </div>
    </div>
</header>
<body>

    @foreach (var courseItem in Model)
    {

   <div class="col-lg-6 col-xxl-4 mb-5">
        <div class="card bg-light border-0 h-100">
            <img src="~/Uploads/Course/Images/@courseItem.Image_ID" style="width: 150px; height: 150px; margin: auto; display: block; "  />
            <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                <h2 class="fs-4 fw-bold">@courseItem.Name</h2>
                <p class="mb-0">@courseItem.Description</p>
            
            </div>
            <div class="card-footer">
                <a href="@Url.Action("CourseInfo","Home",new {id=courseItem.ID} )" class="btn btn-primary" style="margin: auto; display: block;">Find out more</a>
            </div>


        </div>
    </div>
    }
    


</body>